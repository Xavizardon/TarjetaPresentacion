<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="@dimen/padding_gen">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/icon"
            android:padding="@dimen/padding_gen"
            android:layout_margin="@dimen/padding_gen"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_margin="@dimen/padding_gen">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/name_user"
            android:textSize="@dimen/big_text"
            android:layout_margin="@dimen/padding_gen"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="@dimen/tam_img"
                android:layout_height="@dimen/tam_img"
                android:src="@drawable/faceb"
                android:padding="@dimen/padding_gen"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fb_name"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:textSize="@dimen/normal_text"/>

            <ImageView
                android:layout_width="@dimen/tam_img"
                android:layout_height="@dimen/tam_img"
                android:src="@drawable/twit"
                android:padding="@dimen/padding_gen"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twit_name"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:textSize="@dimen/normal_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:gravity="bottom|center">

            <ImageView
                android:layout_width="@dimen/tam_img"
                android:layout_height="@dimen/tam_img"
                android:src="@drawable/github"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xavizardon"
                android:layout_weight="1"
                android:textSize="@dimen/normal_text"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>